package game.startingClass;

import java.util.Timer;
import java.util.TimerTask;

public class stScareTimer extends TimerTask{
	Timer timer;
	
	public stScareTimer(Timer timer){
		this.timer = timer;
	}
	
	@Override
	public void run() {
	}
	
	public void schedure(TimerTask task, long delay, long period){
		timer.schedule(new stScareTimer(), 5000);
	}
}
